{
    "openapi": "3.0.0",
    "info": {
        "source": "RapidAPI",
        "title": "Body Stats Calculator",
        "version": "v1",
        "description": "A comprehensive API for calculating health and fitness metrics including BMI, BMR, body fat percentage, daily caloric needs, macronutrient ratios, and TDEE. Supports both metric (kg, cm) and imperial (lbs, inches) units. Provides scientifically-backed calculations for body composition and energy expenditure metrics."
    },
    "servers": [
        {"url": "https://body-stats-calculator.p.rapidapi.com"}
    ],
    "paths": {
        "/bmi": {
            "post": {
                "operationId": "calculateBMI",
                "summary": "Calculate Body Mass Index (BMI)",
                "description": "Calculates Body Mass Index and provides a health category based on standard BMI ranges.",
                "requestBody": {
                    "required": "true",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["weight", "height"],
                                "properties": {
                                    "weight": {
                                        "type": "number",
                                        "description": "Weight in kg (metric) or lbs (imperial), e.g.: 70.5"
                                    },
                                    "height": {
                                        "type": "number",
                                        "description": "Height in cm (metric) or inches (imperial), e.g.: 175"
                                    },
                                    "unit": {
                                        "type": "string",
                                        "enum": ["metric", "imperial"],
                                        "description": "Unit system: metric (kg, cm) or imperial (lbs, inches). Defaults to metric if not specified."
                                    }
                                }
                            }
                        }
                    }
                },
                "parameters": []
            }
        },
        "/bmr": {
            "post": {
                "operationId": "calculateBMR",
                "summary": "Calculate Basal Metabolic Rate (BMR)",
                "description": "Calculates the Basal Metabolic Rate using the Mifflin-St Jeor equation. BMR represents the number of calories your body needs at rest.",
                "requestBody": {
                    "required": "true",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["weight", "height", "age", "gender"],
                                "properties": {
                                    "weight": {
                                        "type": "number",
                                        "description": "Weight in kg (metric) or lbs (imperial), e.g.: 70.5"
                                    },
                                    "height": {
                                        "type": "number",
                                        "description": "Height in cm (metric) or inches (imperial), e.g.: 175"
                                    },
                                    "age": {
                                        "type": "integer",
                                        "description": "Age in years, e.g.: 30"
                                    },
                                    "gender": {
                                        "type": "string",
                                        "enum": ["male", "female"],
                                        "description": "Gender: male or female"
                                    },
                                    "unit": {
                                        "type": "string",
                                        "enum": ["metric", "imperial"],
                                        "description": "Unit system: metric (kg, cm) or imperial (lbs, inches). Defaults to metric if not specified."
                                    }
                                }
                            }
                        }
                    }
                },
                "parameters": []
            }
        },
        "/body-fat": {
            "post": {
                "operationId": "calculateBodyFat",
                "summary": "Calculate Body Fat Percentage",
                "description": "Estimates the body fat percentage based on age, height, and weight using the U.S. Navy method for body composition analysis.",
                "requestBody": {
                    "required": "true",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["weight", "height", "age", "gender"],
                                "properties": {
                                    "weight": {
                                        "type": "number",
                                        "description": "Weight in kg (metric) or lbs (imperial), e.g.: 70.5"
                                    },
                                    "height": {
                                        "type": "number",
                                        "description": "Height in cm (metric) or inches (imperial), e.g.: 175.0"
                                    },
                                    "age": {
                                        "type": "integer",
                                        "description": "Age in years, e.g.: 30"
                                    },
                                    "gender": {
                                        "type": "string",
                                        "enum": ["male", "female"],
                                        "description": "Gender: male or female"
                                    },
                                    "unit": {
                                        "type": "string",
                                        "enum": ["metric", "imperial"],
                                        "description": "Unit system: metric (kg, cm) or imperial (lbs, inches). Defaults to metric if not specified."
                                    }
                                }
                            }
                        }
                    }
                },
                "parameters": []
            }
        },
        "/calories": {
            "post": {
                "operationId": "calculateDailyCalories",
                "summary": "Calculate Daily Caloric Needs",
                "description": "Calculates daily caloric requirements based on BMR and activity level. Returns caloric needs for different activity levels.",
                "requestBody": {
                    "required": "true",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["weight", "height", "age", "gender", "activity"],
                                "properties": {
                                    "weight": {
                                        "type": "number",
                                        "description": "Weight in kg (metric) or lbs (imperial), e.g.: 70.5"
                                    },
                                    "height": {
                                        "type": "number",
                                        "description": "Height in cm (metric) or inches (imperial), e.g.: 175.0"
                                    },
                                    "age": {
                                        "type": "integer",
                                        "description": "Age in years, e.g.: 30"
                                    },
                                    "gender": {
                                        "type": "string",
                                        "enum": ["male", "female"],
                                        "description": "Gender: male or female"
                                    },
                                    "activity": {
                                        "type": "string",
                                        "enum": ["sedentary", "light", "moderate", "active", "intense"],
                                        "description": "Activity level: sedentary (little/no exercise), light (1-3 days/week), moderate (3-5 days/week), active (6-7 days/week), intense (very hard exercise & physical job)"
                                    },
                                    "unit": {
                                        "type": "string",
                                        "enum": ["metric", "imperial"],
                                        "description": "Unit system: metric (kg, cm) or imperial (lbs, inches). Defaults to metric if not specified."
                                    }
                                }
                            }
                        }
                    }
                },
                "parameters": []
            }
        },
        "/macros": {
            "post": {
                "operationId": "calculateMacronutrients",
                "summary": "Calculate Macronutrient Breakdown",
                "description": "Provides recommended macronutrient ratios (protein, carbs, fats, sugar) for daily consumption based on weight goal.",
                "requestBody": {
                    "required": "true",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["weight", "height", "age", "gender", "activity", "goal"],
                                "properties": {
                                    "weight": {
                                        "type": "number",
                                        "description": "Weight in kg (metric) or lbs (imperial), e.g.: 70.5"
                                    },
                                    "height": {
                                        "type": "number",
                                        "description": "Height in cm (metric) or inches (imperial), e.g.: 175.0"
                                    },
                                    "age": {
                                        "type": "integer",
                                        "description": "Age in years, e.g.: 30"
                                    },
                                    "gender": {
                                        "type": "string",
                                        "enum": ["male", "female"],
                                        "description": "Gender: male or female"
                                    },
                                    "activity": {
                                        "type": "string",
                                        "enum": ["sedentary", "light", "moderate", "active", "intense"],
                                        "description": "Activity level: sedentary, light, moderate, active, or intense"
                                    },
                                    "goal": {
                                        "type": "string",
                                        "enum": ["lose", "maintain", "gain"],
                                        "description": "Weight goal: lose (weight loss), maintain (weight maintenance), or gain (weight gain)"
                                    },
                                    "unit": {
                                        "type": "string",
                                        "enum": ["metric", "imperial"],
                                        "description": "Unit system: metric (kg, cm) or imperial (lbs, inches). Defaults to metric if not specified."
                                    }
                                }
                            }
                        }
                    }
                },
                "parameters": []
            }
        },
        "/tdee": {
            "post": {
                "operationId": "calculateTDEE",
                "summary": "Calculate Total Daily Energy Expenditure (TDEE)",
                "description": "Calculates Total Daily Energy Expenditure including activity level adjustments. TDEE represents the total calories burned per day.",
                "requestBody": {
                    "required": "true",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["weight", "height", "age", "gender", "activity"],
                                "properties": {
                                    "weight": {
                                        "type": "number",
                                        "description": "Weight in kg (metric) or lbs (imperial), e.g.: 70.5"
                                    },
                                    "height": {
                                        "type": "number",
                                        "description": "Height in cm (metric) or inches (imperial), e.g.: 175.0"
                                    },
                                    "age": {
                                        "type": "integer",
                                        "description": "Age in years, e.g.: 30"
                                    },
                                    "gender": {
                                        "type": "string",
                                        "enum": ["male", "female"],
                                        "description": "Gender: male or female"
                                    },
                                    "activity": {
                                        "type": "string",
                                        "enum": ["sedentary", "light", "moderate", "active", "intense"],
                                        "description": "Activity level: sedentary, light, moderate, active, or intense"
                                    },
                                    "unit": {
                                        "type": "string",
                                        "enum": ["metric", "imperial"],
                                        "description": "Unit system: metric (kg, cm) or imperial (lbs, inches). Defaults to metric if not specified."
                                    }
                                }
                            }
                        }
                    }
                },
                "parameters": []
            }
        }
    }
}

